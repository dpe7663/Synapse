<resources>
     <!--Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/membranebackground</item>
    </style>

    <style name="TitleText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="SubtitleText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RegularText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:alpha">0.75</item>
        <item name="android:background">@drawable/single_line_text_border</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">315dp</item>
    </style>

    <style name="SmallText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.75</item>
    </style>
</resources>
