<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.loslolos.synapse.SearchResultsActivity">


    <Button
        android:id="@+id/profileButton"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/profile_button"
        app:layout_constraintBottom_toBottomOf="@+id/researchButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/researchButton" />


    <Button
        android:id="@+id/researchButton"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/research_button"
        app:layout_constraintBottom_toBottomOf="@+id/search2Button"
        app:layout_constraintStart_toEndOf="@+id/profileButton"
        app:layout_constraintTop_toTopOf="@+id/search2Button" />


    <Button
        android:id="@+id/search2Button"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/search_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/researchButton"
        app:layout_constraintTop_toBottomOf="@+id/buttonSearch"
        app:layout_constraintVertical_bias="0.515" />


    <Button
        android:id="@+id/favoritesButton"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/favorites_button"
        app:layout_constraintBottom_toBottomOf="@+id/search2Button"
        app:layout_constraintStart_toEndOf="@+id/search2Button"
        app:layout_constraintTop_toTopOf="@+id/search2Button" />


    <Button
        android:id="@+id/settingsButton"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/settings_button"
        app:layout_constraintBottom_toBottomOf="@+id/favoritesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/favoritesButton"
        app:layout_constraintTop_toTopOf="@+id/favoritesButton" />



    <ListView
        android:id="@+id/searchResultsListView"
        android:layout_width="326dp"
        android:layout_height="332dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:headerDividersEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFOI" />

    <TextView
        android:id="@+id/textViewFOI"
        android:layout_width="335dp"
        android:layout_height="101dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/quicksand"
        android:textAlignment="center"
        android:textColor="#E4E5E5"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
